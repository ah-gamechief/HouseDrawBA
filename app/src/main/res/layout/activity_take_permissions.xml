<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBgColor"
    tools:context=".activities.TakePermissionsActivity"
    >
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/admob_close_button_white_cross"
        android:padding="15dp"
        app:tint="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/tv_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5"
            android:src="@drawable/ic_req_per"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/tv_n1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_top"
            android:gravity="center_horizontal"
            android:text="Permissions Required"
            android:textColor="@color/Black_Eel"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_n2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_n1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Permissions are required to capture photos, write storage permission to save files in storage"
            android:textColor="@color/Black_Eel"
            android:textSize="12sp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_switches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_n2"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_10sdp"
            app:layout_constraintWidth_percent="0.85"
            android:layout_marginTop="@dimen/_5sdp"
            android:animateLayoutChanges="true"
            app:cardBackgroundColor="@color/white"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                >
                <FrameLayout
                    android:id="@+id/switch1_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/Black_Eel"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        />
                    <com.bitvale.switcher.SwitcherX
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:switcher_on_color="@color/primaryColor"
                        app:switcher_off_color="@color/Red"
                        app:switcher_icon_color="@color/white"
                        android:checked="false"
                        android:clickable="false"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/_5sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                </FrameLayout>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gnt_gray"
                    android:layout_gravity="bottom"
                    app:layout_constraintTop_toBottomOf="@+id/switch1_notification"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.95"
                    android:visibility="gone"
                    />

                <FrameLayout
                    android:id="@+id/switch2_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/switch1_notification"
                    android:padding="@dimen/_5sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Photos"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/Black_Eel"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        />
                    <com.bitvale.switcher.SwitcherX
                        android:id="@+id/switch2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:switcher_on_color="@color/primaryColor"
                        app:switcher_off_color="@color/Red"
                        app:switcher_icon_color="@color/white"
                        android:checked="false"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/_5sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                </FrameLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/grayTrpColor"
                    android:layout_gravity="bottom"
                    app:layout_constraintTop_toBottomOf="@+id/switch2_photos"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.95"
                    />

                <FrameLayout
                    android:id="@+id/switch3_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/switch2_photos"
                    android:padding="@dimen/_5sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Access Camera"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/Black_Eel"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        />
                    <com.bitvale.switcher.SwitcherX
                        android:id="@+id/switch3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:switcher_on_color="@color/primaryColor"
                        app:switcher_off_color="@color/Red"
                        app:switcher_icon_color="@color/white"
                        android:checked="false"
                        android:clickable="false"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/_5sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7"
            android:layout_marginTop="@dimen/_25sdp"
            android:adjustViewBounds="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/done"
            app:lottie_loop="false"
            app:lottie_speed="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lottie_done"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Permissions are granted you may proceed now"
            android:textColor="@color/Black_Eel"
            android:textSize="14sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lottie_done"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Let's Continue"
            android:paddingHorizontal="@dimen/_30sdp"
            android:paddingVertical="@dimen/_8sdp"
            app:cornerRadius="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_50sdp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/ad_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.95"
        />

</androidx.constraintlayout.widget.ConstraintLayout>