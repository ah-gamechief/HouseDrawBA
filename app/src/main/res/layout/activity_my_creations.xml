<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyCreationsActivity"
    android:background="@color/white"
    >
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:paddingTop="24dp"
        android:background="@color/primaryColor"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back"
        app:navigationIconTint="@color/white"
        app:title="Saved"
        />

    <RelativeLayout
        android:id="@+id/layout_del_saved"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:visibility="gone"
        android:background="@color/primaryColor"
        app:layout_constraintTop_toTopOf="parent"
        >
        <CheckBox
            android:id="@+id/checkbox_saved"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Select All"
            android:textStyle="bold"
            android:padding="15dp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_cancel_saved"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:layout_toStartOf="@+id/btn_del_saved"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/btn_del_saved"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Delete"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_savedImages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/ad_view_container"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/rv_row_saved_images"
        />
    <TextView
        android:id="@+id/empty_ty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empty List"
        android:textStyle="bold"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/Black_Eel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.5"
        />


    <FrameLayout
        android:id="@+id/ad_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>