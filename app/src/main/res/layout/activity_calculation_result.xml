<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CalculationResultActivity"
    android:background="@color/white"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Bricks Calculator"
        android:background="@color/primaryColor"
        android:paddingTop="24dp"
        app:titleTextColor="@color/white"
        app:navigationIconTint="@color/white"
        app:navigationIcon="@drawable/arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/ad_view_container"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_room2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/dsh_bricks_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.5"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/_15sdp"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_room2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/primaryColor"
                app:strokeWidth="1dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    >

                    <TextView
                        android:id="@+id/tv_none_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Bricks: "
                        android:textColor="@color/Black_Eel"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        />

                    <TextView
                        android:id="@+id/tvValue1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="223000"
                        android:textColor="@color/Black_Eel"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/_5sdp"
                        />

                    <View
                        android:id="@+id/lineView"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_none_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_percent="0.98"
                        android:background="@color/primaryColor"
                        android:layout_marginVertical="@dimen/_5sdp"
                        />

                    <TextView
                        android:id="@+id/tv_none_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Area : "
                        android:textColor="@color/Black_Eel"
                        app:layout_constraintTop_toBottomOf="@+id/lineView"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />

                    <TextView
                        android:id="@+id/tvValue2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="223000 ft"
                        android:textColor="@color/Black_Eel"
                        app:layout_constraintTop_toBottomOf="@+id/lineView"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />

                    <View
                        android:id="@+id/lineView2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_none_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_percent="0.98"
                        android:background="@color/primaryColor"
                        android:layout_marginVertical="@dimen/_5sdp"
                        />

                    <TextView
                        android:id="@+id/tv_none_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Area : "
                        android:textColor="@color/Black_Eel"
                        app:layout_constraintTop_toBottomOf="@+id/lineView2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />

                    <TextView
                        android:id="@+id/tvValue3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="223000 ft"
                        android:textColor="@color/Black_Eel"
                        app:layout_constraintTop_toBottomOf="@+id/lineView2"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/returnBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintTop_toBottomOf="@+id/mcv_result"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_30sdp"
                app:cornerRadius="@dimen/_10sdp"
                android:text="Recalculate"
                android:textColor="@color/white"
                android:paddingVertical="@dimen/_9sdp"
                android:textAllCaps="false"
                app:backgroundTint="@color/primaryColor"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/ad_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>